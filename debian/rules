#!/usr/bin/make -f
#  Hey Emacs, this is a -*- Makefile -*-

# Uncomment this to turn on verbose mode. 
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

build: build-stamp
build-stamp:
	dh_testdir

# Well, this does it all.
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

# Toplevel clean does it all
	-$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	mkdir -p debian/lua-httpd/usr/share/doc/lua-httpd
	mkdir -p debian/lua-httpd/usr/lib/lua/5.0
	mkdir -p debian/lua-httpd/usr/share/lua50/

	cp *.so debian/lua-httpd/usr/lib/lua/5.0
	cp default.lua debian/lua-httpd/usr/share/lua50/libhttpd.lua

	mkdir debian/lua-httpd/usr/share/doc/lua-httpd/examples
	cp httpd.lua debian/lua-httpd/usr/share/doc/lua-httpd/examples
	cp client.lua debian/lua-httpd/usr/share/doc/lua-httpd/examples
	cp -R vhosts debian/lua-httpd/usr/share/doc/lua-httpd/examples



# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir -a
	dh_testroot -a
#	dh_installdebconf -a
	dh_installdocs -a
#	dh_installexamples -a
#	dh_installmenu -a
#	dh_installlogrotate -a
#	dh_installemacsen -a
#	dh_installpam -a
#	dh_installmime -a
#	dh_installinit -a
#	dh_installcron -a
#	dh_installman -a
#	dh_installinfo -a
#	dh_undocumented -a
	dh_installchangelogs -a
	dh_strip -a
	dh_link -a
	dh_fixperms -a
	dh_makeshlibs -a -V
	dh_installdeb -a
#	dh_perl -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
